{
  "$schema": "https://tauri.app/schemas/capability-v1.json",
  "identifier": "default",
  "description": "Default permissions for AYCD",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "core:window:default",
    "core:window:allow-close",
    "core:window:allow-center",
    "core:window:allow-maximize",
    "core:window:allow-minimize",
    "core:window:allow-set-title",
    "dialog:default",
    "dialog:allow-open",
    "dialog:allow-save",
    "fs:default",
    "fs:allow-read-text-file",
    "fs:allow-read-dir",
    "fs:allow-write-text-file",
    "fs:allow-write-file",
    "fs:allow-create",
    "fs:allow-mkdir",
    "fs:allow-remove",
    "fs:allow-exists",
    "fs:allow-stat",
    "fs:allow-rename",
    "fs:scope-home",
    "shell:default",
    "shell:allow-open"
  ],
  "scope": {
    "allow": [
      "$HOME/AYCD/**"
    ]
  }
}
